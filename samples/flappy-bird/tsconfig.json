{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "declaration": true,
    "outDir": "./dist",
    "allowJs": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl" : "./",
    "paths": {
      "@core/*": ["./core/*"],
      "@flappy-bird/*": ["./samples/flappy-bird/*"],
      "@sample-game/*": ["./samples/sample-game/*"]
    }
  },
  "include": [
    "./**/*",
    "core/.eslintrc.js"
  ]
}