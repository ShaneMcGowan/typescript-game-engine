{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "declaration": true,
    "outDir": "./dist",
    "allowJs": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl" : "./",
    "paths": {
      "@core/*": ["./node_modules/typescript-game-engine/src/*"],
      "@sample-game/*": ["./*"],
    },
    "types": [
      "./node_modules/typescript-game-engine/src/types/index.d.ts"
    ]
  },
  "include": [
    "./**/*",
  ],
}