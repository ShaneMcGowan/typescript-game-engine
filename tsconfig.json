{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "es6",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl" : "./",
    "paths": {
      "@core/*": ["./core/*"],
      "@constants/*": ["./constants/*"],
      "@model/*": ["./model/*"],
      "@scenes/*": ["./scenes/*"],
      "@utils/*": ["./utils/*"],
      "@flappy-bird/*": ["./samples/flappy-bird/*"]
    }
  },
  "include": [
    "./**/*",
    "./.eslintrc.js"
  ]
}