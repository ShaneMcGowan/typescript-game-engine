{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "outDir": "./dist",
    "allowJs": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "@core/*": [
        "../core/src/*"
      ], // replace '../core/src/*' with './node_modules/typescript-game-engine/src/*' if you are using npm mode rather than local mode 
      "@game/*": [
        "./*"
      ],
    },
    "types": [
      "../core/src/types/index.d.ts" // replace '../core/src/types/index.d.ts' with './node_modules/typescript-game-engine/src/types/index.d.ts' if you are using npm mode rather than local mode
    ]
  },
  "include": [
    "./**/*",
  ],
}